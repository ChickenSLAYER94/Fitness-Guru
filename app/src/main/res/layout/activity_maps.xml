<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:orientation="vertical">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="0dp"
        map:uiZoomControls="true"
        map:uiRotateGestures="true"
        map:cameraTilt="30"
        tools:ignore="FragmentTagUsage"
       >
    </fragment>

    <!--    button to initiate route functionality-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/userLocationInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Location here"
            android:inputType="text" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"></Space>

        <Button
            android:id="@+id/directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Search Route" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"></Space>

        <Button
            android:id="@+id/weatherInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Status" />

    </LinearLayout>
    <GridLayout
        android:id="@+id/locationStats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:rowCount="2"
        android:orientation="vertical"
        android:padding="15dp"
        android:columnCount="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:baselineAligned="false"
        android:background="@color/white"
        android:padding="5dp"
        >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/distanceToCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/distance_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_below="@id/distanceToCover"
            android:layout_centerInParent="true"
            android:text="Distance"
            android:textAlignment="center" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/estimatedDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/calories_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@id/estimatedDuration"
            android:text="Duration"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/duration_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/duration_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_below="@id/duration_content_tv"
            android:text="Kcal Burned"
            />
    </RelativeLayout>
    </LinearLayout>
    </GridLayout>

</LinearLayout>